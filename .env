# ⚙️ Configuración base de datos PostgreSQL en Render
DB_NAME=render_dbname          # cámbialo por el nombre real que Render te da
DB_USER=render_user            # usuario de la base de datos en Render
DB_PASSWORD=render_password    # contraseña que Render te asigna
DB_HOST=render_host            # host de la DB en Render (ej: dpg-xxxxxxx.render.com)
DB_PORT=5432

# 🔒 Seguridad
DEBUG=False
SECRET_KEY=tu_super_secret_key_segura   # genera una nueva con secrets.token_urlsafe(50)

# 🌍 Configuración Render
ALLOWED_HOSTS=tu-proyecto.onrender.com,localhost,127.0.0.1
